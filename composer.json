{
    "name": "ezhasyafaat/laravel-view",
    "description": "Package for create view laravel.",
    "type": "package",
    "license": "MIT",
    "keywords": [
        "laravel view generator"
    ],
    "authors": [
        {
            "name": "Muh Ezha Syafaat",
            "email": "muhammadezhasyafaat08@gmail.com"
        }
    ],
    "require": {
        "illuminate/support": "^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ezhasyafaat\\LaravelView\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ezhasyafaat\\LaravelView\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist.php --allow-risky=yes"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ezhasyafaat\\LaravelView\\LaravelViewServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.9"
    }
}
